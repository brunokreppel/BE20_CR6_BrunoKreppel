{% extends 'base.html.twig' %}

{% block title %}Veranstaltungen{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Veranstaltungen</h1>

        <div class="filter-links mb-4 d-flex justify-content-center gap-4">
            <a href="{{ path('app_events_filter', {'type': 'Kultur'}) }}" class="btn btnCstm mr-2" style="width: 85px">Kultur</a>
            <a href="{{ path('app_events_filter', {'type': 'Musik'}) }}" class="btn btnCstm mr-2" style="width: 85px">Musik</a>
            <a href="{{ path('app_events_filter', {'type': 'Theater'}) }}" class="btn btnCstm mr-2" style="width: 85px">Theater</a>
            <a href="{{ path('app_events_index') }}" class="btn btnCstm" style="width: 85px">Alle</a>
        </div>

        <div class="row">
            {% for event in events %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow" style="position: relative; height: 400px !important;">
                        <img src="{{ event.eventImg }}" class="card-img-top" alt="Veranstaltungsbild">
                        <div class="card-body" style="height: 100%;">
                            <h5 class="card-title mb-3">{{ event.eventName }}</h5>
                            <p class="card-text mb-3">{{ event.eventDescription }}</p>
                            <p class="card-text mb-3"><strong>Datum:</strong> {{ event.eventTimeDate ? event.eventTimeDate|date('d. F Y H:i', 'Europe/Berlin') : '' }}</p>
                            <div class="button-group" style="position: absolute; bottom: 15px; left: 0; right: 0; text-align: center;">
                                <a href="{{ path('app_events_show', {'id': event.id}) }}" class="btn btn-primary btn-sm mr-2">Anzeigen</a>
                                <a href="{{ path('app_events_edit', {'id': event.id}) }}" class="btn btn-secondary btn-sm">Bearbeiten</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">Keine EintrÃ¤ge gefunden.</p>
                </div>
            {% endfor %}
        </div>
{% endblock %}
